@model IEnumerable<Agro_Chemical_Management.Models.SaleItem>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaxAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.EditorFor(modelItem => item.Product.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.HiddenFor(modelItem => item.SaleId)
                @Html.HiddenFor(modelItem => item.Id)
                @Html.HiddenFor(modelItem => item.ProductCode)
            </td>
            <td>
                @Html.EditorFor(modelItem => item.Quantity, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.EditorFor(modelItem => item.Price, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.EditorFor(modelItem => item.TaxAmount, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.EditorFor(modelItem => item.Total, new { htmlAttributes = new { @class = "form-control" } })
            </td>
        </tr>
    }

</table>
